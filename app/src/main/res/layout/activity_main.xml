<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Dicecup 2.0!"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llDiceboard"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/cardview_compat_inset_shadow"
        android:layout_marginTop="8dp"
        android:background="@color/diceboard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDice1"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:maxWidth="100dp"
            android:src="@drawable/dice1" />

        <ImageView
            android:id="@+id/imgDice2"
            android:layout_width="145dp"
            android:layout_height="135dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice2" />

    </LinearLayout>

     <LinearLayout
         android:id="@+id/llDiceboard2"
         android:layout_width="410dp"
         android:layout_height="178dp"
         android:layout_below="@+id/tvHeader"
         android:layout_centerHorizontal="true"
         android:layout_marginStart="210dp"
         android:layout_marginTop="181dp"
         android:layout_marginEnd="210dp"
         android:layout_marginBottom="210dp"
         android:background="@color/diceboard"
         android:orientation="horizontal">

         <ImageView
             android:id="@+id/imgDice3"
             android:layout_width="184dp"
             android:layout_height="150dp"
             android:layout_marginStart="10dp"
             android:layout_marginTop="10dp"
             android:layout_marginEnd="10dp"
             android:layout_marginBottom="10dp"
             android:adjustViewBounds="true"
             android:maxWidth="100dp"
             android:scaleType="center"
             android:src="@drawable/dice3" />

         <ImageView
             android:id="@+id/imgDice4"
             android:layout_width="158dp"
             android:layout_height="136dp"
             android:layout_marginStart="20dp"
             android:layout_marginTop="20dp"
             android:layout_marginEnd="20dp"
             android:layout_marginBottom="20dp"
             android:adjustViewBounds="true"
             android:maxWidth="100dp"
             android:scaleType="center"
             android:src="@drawable/dice4" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/llDiceboard3"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/tvHeader"
        android:layout_marginTop="359dp"
        android:layout_marginBottom="410dp"
        android:background="@color/diceboard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDice5"
            android:layout_width="166dp"
            android:layout_height="139dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice5" />

        <ImageView
            android:id="@+id/imgDice6"
            android:layout_width="158dp"
            android:layout_height="142dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice6" />


    </LinearLayout>

    <NumberPicker
        android:id="@+id/NumberPicker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="600dp" />

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="313dp"
        android:layout_marginBottom="20pt"
        android:background="@color/purple_200"
        android:onClick="onRoll"
        android:text="Roll" />


    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="30dp"
        android:background="@color/purple_200"
        android:onClick="onHistory"
        android:text="History" />

</RelativeLayout>