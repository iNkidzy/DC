<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/view">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dicecup DUO!"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="bold"
       />

    <LinearLayout
        android:id="@+id/llDiceboard"
        android:layout_width="409dp"
        android:layout_height="194dp"
        android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/cardview_compat_inset_shadow"
        android:layout_marginTop="8dp"
        android:background="@color/diceboard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDice1"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:maxWidth="100dp"
            android:src="@drawable/dice1" />

        <ImageView
            android:id="@+id/imgDice2"
            android:layout_width="156dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDiceboard2"
        android:layout_width="409dp"
        android:layout_height="180dp"
        android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="210dp"
        android:background="@color/diceboard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDice3"
            android:layout_width="165dp"
            android:layout_height="155dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice3" />

        <ImageView
            android:id="@+id/imgDice4"
            android:layout_width="156dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice4" />
    </LinearLayout>

    <!--  <TextureView
        android:id="@+id/tvHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRoll"
        android:text= "This is history"
        android:layout_centerHorizontal="true"
      /> -->

    <LinearLayout
        android:id="@+id/llDiceboard3"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_below="@+id/tvHeader"
        android:layout_marginTop="357dp"
        android:layout_marginBottom="410dp"
        android:background="@color/diceboard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDice5"
            android:layout_width="156dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice5" />

        <ImageView
            android:id="@+id/imgDice6"
            android:layout_width="156dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="center"
            android:src="@drawable/dice6" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="313dp"
        android:layout_marginBottom="13dp"
        android:onClick="onRoll"
        android:text="Roll" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:onClick="onHistory"
        android:text="History" />

    <NumberPicker
        android:id="@+id/NumberPicker"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="77dp" />

</RelativeLayout>